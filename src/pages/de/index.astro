---
import { changeLanguage } from "i18next";
import { Image } from "@astrojs/image/components";
import Counter from "../../components/Counter.astro";
import Hero from "../../components/Hero.astro";
import IntroText from "../../components/IntroText.astro";
import Section from "../../components/Section.astro";
import VideoPlayer from "../../components/VideoPlayer.astro";
import Layout from "../../layouts/Layout.astro";
import testImage from "../../images/background1.jpg";
import Swiper from "../../components/Swiper.astro";
import fscCertificate from "../../images/fsc_certifikat.png";
import hamag from "../../images/hamag.jpg";
import eu from "../../images/eu-1.jpg";
import esif from "../../images/esif2.jpg";
import ProductsShowcase from "../../components/ProductsShowcase.astro";
import type { Product } from "../../components/ProductsShowcase.astro";
import ContactForm from "../../components/ContactForm.astro";
import { t, changeLanguage } from "i18next";
import "../../global.css";

changeLanguage("de");

const products: Product[] = [
    {
        id: "firewood",
        name: "Firewood",
    },
    { id: "briquettes", name: "Briquettes" },
    { id: "pellets", name: "Pellets" },
    { id: "parquette", name: "Parquet" },
    { id: "construction", name: "ConstructionWood" },
    {
        id: "transit",
        name: "Transit",
    },
];
---

<Layout title='Welcome to Astro.'>
  <main class='pt-24'>
    <Hero height='h-[600px]' />
    <IntroText />
    <Counter />
    <!-- <div
      class='grid grid-cols-1 md:grid-cols-2 gap-6 max-w-7xl mx-auto px-8 md:px-16'
    >
      <VideoPlayer />
      <VideoPlayer />
    </div> -->
    <Section id='about'>
      <div class='grid grid-cols-1 md:grid-cols-2 gap-16'>
        <div class='space-y-6'>
          <h2 class='text-2xl md:text-4xl font-bold'>{t('About.Title')}</h2>
          <p class='text-sm text-justify leading-6'>
            <strong>TIMBER-EXPORT</strong>
            {t('About.About1')}
            <strong
              class='underline underline-offset-2 decoration-2 underline-primary'
              >Mirjane i Ivana BlaziniÄ‡</strong
            >, {t('About.About2')}
            <strong> {t('About.AboutCountry')}</strong>.
          </p>
        </div>
        <Swiper height='h-80' imageUrls={[testImage, testImage, testImage]} />
      </div>
    </Section>
    <Section>
      <div class='grid grid-cols-1 md:grid-cols-2 gap-16'>
        <div class='grid grid-cols-2 place-items-center gap-0'>
          <Image src={fscCertificate} height='200' alt='Fsc certificate' />
          <div>
            <Image src={hamag} height='150' alt='Fsc certificate' />
            <Image src={eu} height='150' alt='Fsc certificate' />
            <Image src={esif} height='150' alt='Fsc certificate' />
          </div>
        </div>
        <div class='space-y-6 order-first md:order-last relative'>
          <h2 class='text-2xl md:text-4xl font-bold'>
            {t('Certificate.Title')}
          </h2>
          <p class='text-sm text-justify leading-6'>
            {t('Certificate.Text')}
          </p>
          <p class='text-xs font-medium text-dark'>
            {t('Certificate.SubText')}
          </p>
        </div>
      </div>
    </Section>
    <Section id="products" title={t('Products.Title')}>
      <ProductsShowcase products={products} />
    </Section>
    <Section id='contact' title={t('Contact.Title')}>
      <ContactForm />
    </Section>
  </main>
</Layout>

