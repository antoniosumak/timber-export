---
import type { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<'section'>{
  title?: any;
}
const { title, id } = Astro.props;
---

<section id={id} class='max-w-7xl mx-auto px-8 md:px-16 py-4 md:py-8 mt-24 relative'>
  {
    title && (
      <h1 class='text-2xl md:text-4xl text-center font-bold md:text-left mb-8'>
        {title}
      </h1>
    )
  }
  <slot />
</section>
